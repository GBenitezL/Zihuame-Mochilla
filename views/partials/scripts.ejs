<script>
    function formatDate(fecha) {
        var yyyy = fecha.getFullYear();
        var mm = fecha.getMonth() + 1;
        var dd = fecha.getDate();
        if (dd < 10) dd = '0' + dd;
        if (mm < 10) mm = '0' + mm;
        return dd + '/' + mm + '/' + yyyy;
    }
</script>